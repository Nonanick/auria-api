{
  "name": "maestro",
  "version": "0.0.2",
  "mode": "development",
  "description": "Maestro - Build RESTful API's",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Nicholas Frai",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/json-schema": "^7.0.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.34",
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "ts-jest": "^26.5.3",
    "type-fest": "^1.2.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "ajv": "^7.2.1",
    "esm": "^3.2.25",
    "tslib": "^2.2.0"
  },
  "scripts": {
    "test": "mocha --require esm",
    "build:test": "tsc -w --project ./test/tsconfig.json",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "/__tests/(?!coverage/).*\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "json"
    ]
  }
}
