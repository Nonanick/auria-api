{
	"compilerOptions": {
		"incremental": true,
		"target": "es2019",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"ES2020"
		],
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"importHelpers": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src"
	]
}